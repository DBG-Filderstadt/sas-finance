<!doctype html>
<html lang="en">
  <%- include('partials/header.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('partials/sideboard.ejs') %>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Users</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              
              <button type="button" class="btn btn-danger" onclick="dialog()">Lock User</button>
              <button type="button" class="btn btn-success" onclick="">Unlock User</button>
              
            </div>
          </div>


         

          <h2>Alle Benutzer</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>id</th>
                  <th>Name</th>
                  <th>Klasse</th>
                  <th>RFID</th>
                  <th>Balance</th>
                  <th>Company</th>
                  <th>Rolle</th>
                  <th>Gesperrt</th>
                </tr>
              </thead>
              <tbody>

                <% for(var i=0; i<users.length; i++) { %>
                  <tr>
                     <td><%= users[i].id%></td>
                     <td><%= users[i].fname%> <%= users[i].lname%></td>
                     <td><%= users[i].class%></td>
                     <td><%= users[i].chipID%></td>
                     <td><%= users[i].balance%></td>
                     <td><%= users[i].company%></td>
                     <td><%= users[i].role%></td>
                     <td><%= users[i].isLocked%></td>
                 </tr>        
            <% } %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

    <script>
      function dialog() {
        window.prompt("Please enter the userIUD:", "userID")
      }
    </script>

    <%- include('partials/bottom.ejs') %>
  </body>
</html>
